<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:ignore="ResourceName">

    <include layout="@layout/layout_stick_timer"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="@color/white">


        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_alignParentBottom="true"
            android:background="#ffcccccc" />


        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="42dp"
            android:layout_marginRight="4dp"
            android:text="2020-06-27 21:09"
            android:textColor="@color/ui_txt_hint_color"
            android:textSize="@dimen/h5_font_size" />

        <TextView
            android:id="@+id/tv_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="18dp"
            android:layout_marginTop="15dp"
            android:text="充值"
            android:textColor="@color/ui_txt_normal_color"
            android:textSize="@dimen/h3_font_size" />


        <TextView
            android:id="@+id/tv_momey"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:text="1231231"
            android:textColor="@color/ui_txt_normal_color"
            android:textSize="@dimen/h3_font_size" />


    </RelativeLayout>
</LinearLayout>