<resources>

    <!-- 地址管理页面  start-->
    <!-- H1-->
    <style name="ui_h1_style">
        <item name="android:textSize">@dimen/h1_font_size</item>
        <item name="android:textColor">@color/ui_title_txt_color</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!-- H3普通文本-->
    <style name="ui_h3_normal_style">
        <item name="android:textSize">@dimen/h3_font_size</item>
        <item name="android:textColor">@color/ui_txt_normal_color</item>
    </style>

    <!-- h3 主要按钮-->
    <style name="ui_h3_button_primary_style">
        <item name="android:textSize">@dimen/h3_font_size</item>
        <item name="android:textColor">@color/ui_button_txt_primary_color</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/ui_shap_button_primary_bg</item>
    </style>


    <!-- h4普通文本-->
    <style name="ui_h4_normal_style">
        <item name="android:textSize">@dimen/h4_font_size</item>
        <item name="android:textColor">@color/ui_txt_normal_color</item>
    </style>

    <!-- h5普通文本-->
    <style name="ui_h5_normal_style">
        <item name="android:textSize">@dimen/h5_font_size</item>
        <item name="android:textColor">@color/ui_txt_normal_color</item>
    </style>

    <!-- h5操作文本-->
    <style name="ui_h5_option_style">
        <item name="android:textSize">@dimen/h5_font_size</item>
        <item name="android:textColor">@color/ui_primary_color</item>
    </style>

    <!--单选按钮样式 checkbox-->
    <style name="ui_checkbox_style">
        <item name="android:textColor">@color/ui_txt_normal_color</item>
        <item name="android:button">@null</item>
        <item name="android:drawableLeft">@drawable/ui_checkbox_select</item>
        <item name="android:drawablePadding">5dp</item>
    </style>


    <!-- 滑动开关-->
    <style name="ui_switch_style">
        <!-- 内部图形-->
        <item name="android:thumb">@drawable/ui_switch_thumb</item>
        <item name="android:track">@drawable/ui_switch_track_selector</item>

    </style>

    <!-- 输入框样式-->
    <style name="ui_edit_txt_style">
        <item name="android:textColorHint">@color/ui_txt_hint_color</item>
        <item name="android:textColor">@color/ui_txt_normal_color</item>
        <item name="android:background">@null</item>
        <item name="android:textCursorDrawable">@drawable/ui_edit_cursor</item>
        <item name="android:drawableRight">@mipmap/icon_clear</item>
        <item name="android:maxLines">1</item>
        <item name="android:focusable">true</item>
        <item name="android:focusableInTouchMode">true</item>
    </style>

    <!-- 地址管理页面  end-->



















    <!-- 自定义的对话框-->
    <style name="custom_dialogTheme" parent="@android:style/Theme.Dialog">
        <!-- 边框 -->
        <item name="android:windowFrame">@null</item>
        <!-- 是否浮现在activity之上 -->
        <item name="android:windowIsFloating">true</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 模糊 -->
        <item name="android:backgroundDimEnabled">true</item>
        <!-- 遮罩层 -->
        <item name="android:backgroundDimAmount">0.3</item>
    </style>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 3中状态view-->
    <style name="tab_test">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/red</item>
        <item name="android:drawableLeft">@mipmap/ic_dialog_tip_error</item>
    </style>

    <style name="bt_tab">
        <item name="android:textSize">15sp</item>
    </style>

    <style name="public_dialog_inout_anim" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/public_dialog_enter</item>
        //进入时的动画
        <item name="android:windowExitAnimation">@anim/public_dialog_exit</item>
        //退出时的动画
    </style>

    <style name="user_center_item_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:textColor">@color/ui_txt_normal_color</item>
        <item name="android:textSize">@dimen/h2_font_size</item>
    </style>

    <!-- 用户中心选项样式-->
    <style name="user_center_item_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_marginRight">23dp</item>
        <item name="android:drawablePadding">8dp</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="bottom_line">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">1px</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@color/color_cccccc</item>
    </style>

    <declare-styleable name="MultipleStatusView">
        <attr name="loadingView" format="reference" />
        <attr name="emptyView" format="reference" />
        <attr name="contentView" format="reference" />
    </declare-styleable>

    <style name="MySeekbarSytle" parent="Base.Widget.AppCompat.SeekBar">
        <item name="android:thumb">@drawable/thumb</item>
        <item name="android:progressDrawable">@drawable/po_seekbar</item>
    </style>

    <declare-styleable name="MaxHeightRecyclerView">
        <attr name="maxHeight" format="dimension" />
    </declare-styleable>

    <style name="time_select">
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:paddingTop">6dp</item>
        <item name="android:paddingBottom">6dp</item>
    </style>

    <declare-styleable name="SwipeMenuLayout">
        <!--是否开启侧滑，默认开启-->
        <attr format="boolean" name="isEnableSwipe"/>
        <!--true后菜单放置在左边， 默认放在右边-->
        <attr format="boolean" name="isEnableLeftMenu"/>
        <!--是否点击菜单内容后自动关闭   默认false不关闭-->
        <attr format="boolean" name="isClickMenuAndClose"/>
        <!--是否开启阻塞，默认是开启的，阻塞效果是 列表中当前有一个item的菜单已经被划出，
        想滑出第二个的时候，会先阻塞滑动的动作，把第一个先关掉，再次滑动才能划开第二个；
        不阻塞的话 滑动第二个item的同时，第二个item划开，第一个item同时关闭-->
        <attr format="boolean" name="isOpenChoke"/>
    </declare-styleable>
</resources>