<resources>

    <style name="dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <!-- 3中状态view-->
    <declare-styleable name="MultipleStatusView">
        <attr name="loadingView" format="reference" />
        <attr name="emptyView" format="reference" />
        <attr name="contentView" format="reference" />
    </declare-styleable>

    <style name="tab_test">
        <item  name="android:textSize">20sp</item>
        <item  name="android:textColor">@color/red</item>
        <item name="android:drawableLeft">@mipmap/ic_dialog_tip_error</item>
    </style>

    <style name="bt_tab">
        <item  name="android:textSize">15sp</item>
    </style>


    <!-- 用户中心选项样式-->
    <style name="user_center_item_left">
        <item  name="android:layout_width">wrap_content</item>
        <item  name="android:layout_height">match_parent</item>
        <item  name="android:gravity">center_vertical</item>
        <item  name="android:layout_marginLeft">15dp</item>
        <item  name="android:textColor">@color/public_color_333333</item>
        <item  name="android:drawablePadding">8dp</item>
        <item  name="android:textSize">16sp</item>
    </style>

    <style name="user_center_item_right">
        <item  name="android:layout_width">wrap_content</item>
        <item  name="android:layout_height">wrap_content</item>
        <item  name="android:layout_alignParentRight">true</item>
        <item  name="android:layout_centerVertical">true</item>
        <item  name="android:layout_marginRight">23dp</item>
        <item  name="android:drawablePadding">8dp</item>
        <item  name="android:textSize">15sp</item>
    </style>

    <style name="bottom_line">
        <item  name="android:layout_width">wrap_content</item>
        <item  name="android:layout_height">1px</item>
        <item  name="android:layout_alignParentBottom">true</item>
        <item  name="android:background">@color/color_cccccc</item>
    </style>

</resources>