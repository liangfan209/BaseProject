<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:skin="http://schemas.android.com/android/skin"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="hello"
        android:textColor="@color/ui_txt_normal_color"
        skin:enable="true"/>

    <ImageView
        android:id="@+id/iv_test"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:background="@mipmap/icon_user_head"
        />

    <FrameLayout
        android:id="@+id/flt_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="50dp"
        />


    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tablayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tabIndicatorColor="@color/transparent"
        app:tabTextColor="@color/color_999999"
        app:tabSelectedTextColor="#FD523A"
        android:layout_alignParentBottom="true"
        app:tabTextAppearance="@style/tab_test"
        app:tabRippleColor="@color/transparent"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#cccccc"
        android:layout_alignTop="@+id/tablayout"/>
</RelativeLayout>