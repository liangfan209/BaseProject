<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.clkj.login" >

    <application>
        <activity android:name=".mvp.login.ui.LoginActivity"
            android:label="login"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"/>
        <activity android:name=".mvp.login.ui.RegisterPwdActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            />
        <activity android:name=".mvp.login.ui.SettingPwdActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            />
        <activity android:name=".mvp.login.ui.ModifyPwdActivity"
            android:configChanges="orientation|screenSize"
            android:launchMode="singleTask"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateAlwaysHidden|adjustPan"
            />
    </application>
</manifest>
