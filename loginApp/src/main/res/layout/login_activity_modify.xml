<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:ignore="MissingDefaultResource">
    <include layout="@layout/layout_public_title" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="13dp">

        <com.fan.baseuilibrary.view.DeletableEditText
            android:id="@+id/et_old_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="请输入原密码"
            android:inputType="textPassword"
            android:maxLength="13"
            style="@style/ui_edit_txt_style"
            android:textSize="@dimen/h4_font_size"
            android:layout_marginRight="21dp"/>

    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="14dp"
        android:background="@color/ui_recycleview_item_line_color" />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="13dp">

        <com.fan.baseuilibrary.view.DeletableEditText
            android:id="@+id/et_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="请设置新密码"
            android:inputType="textPassword"
            android:maxLength="13"
            style="@style/ui_edit_txt_style"
            android:textSize="@dimen/h4_font_size"
            android:layout_marginRight="21dp"/>

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="14dp"
        android:background="@color/ui_recycleview_item_line_color"  />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginLeft="27dp"
        android:layout_marginTop="13dp">

        <com.fan.baseuilibrary.view.DeletableEditText
            android:id="@+id/et_re_pwd"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@null"
            android:hint="请确认新密码"
            android:inputType="textPassword"
            android:maxLength="13"
            style="@style/ui_edit_txt_style"
            android:textSize="@dimen/h4_font_size"
            android:layout_marginRight="21dp"/>

    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginLeft="27dp"
        android:layout_marginRight="14dp"
        android:background="@color/ui_recycleview_item_line_color"  />


    <TextView
        android:id="@+id/tv_modify"
        android:layout_width="match_parent"
        android:layout_height="43dp"
        android:layout_marginLeft="28dp"
        android:layout_marginTop="55dp"
        android:layout_marginRight="28dp"
        android:gravity="center"
        android:text="确认修改"
        style="@style/ui_h3_button_primary_style"/>
</LinearLayout>