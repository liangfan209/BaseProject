<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_public_title" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="50dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#fff9f9f9">

            <RelativeLayout
                android:id="@+id/rlt_education"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/iv_education"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icon_contract_left"/>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="30dp"
                    android:layout_marginTop="18dp"
                    android:layout_marginBottom="18dp"
                    android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_education_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="@dimen/h3_font_size"
                            android:textStyle="bold"
                            android:textColor="@color/ui_txt_normal_color"/>
                        <TextView
                            android:id="@+id/tv_education_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginTop="3dp"
                            android:textSize="@dimen/h5_font_size"
                            android:textColor="@color/ui_txt_normal_color"/>

                    <TextView
                        android:id="@+id/tv_education_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/h5_font_size"
                        android:text=""
                        android:layout_marginTop="3dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        android:textColor="@color/ui_txt_normal_color"
                        />
                </LinearLayout>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:drawableRight="@mipmap/next_step"
                    android:drawablePadding="5dp"
                    android:textColor="@color/ui_primary_color"
                    android:text=""/>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/rlt_address"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="@color/white"
                android:layout_marginTop="10dp">

                <ImageView
                    android:id="@+id/iv_address"
                    android:layout_width="15dp"
                    android:layout_height="20dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:background="@mipmap/icon_address1"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="50dp"
                    android:layout_marginRight="30dp"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_address_contact"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textColor="@color/ui_txt_normal_color"
                            android:textSize="@dimen/h3_font_size"
                            android:textStyle="bold"/>
                        <TextView
                            android:id="@+id/tv_address_phone"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:layout_marginLeft="15dp"
                            android:textColor="@color/ui_txt_hint_color"
                            android:textSize="@dimen/h4_font_size"/>
                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_address_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/h5_font_size"
                        android:text=""
                        android:layout_marginTop="10dp"
                        android:maxLines="2"
                        android:ellipsize="end"
                        />


                </LinearLayout>

                <ImageView
                    android:layout_width="9dp"
                    android:layout_height="15dp"
                    android:layout_marginLeft="15dp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="15dp"
                    android:background="@mipmap/next_step" />


            </RelativeLayout>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:background="@color/white">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="报考信息"
                    android:textColor="@color/ui_txt_normal_color"
                    android:textSize="@dimen/h2_font_size"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    android:textStyle="bold"
                    />

                <LinearLayout
                    android:id="@+id/llt_order_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="15dp"
                    android:layout_marginTop="40dp"
                    android:background="@drawable/shap_white_radius_10"
                    >

                    <ImageView
                        android:id="@+id/iv_item"
                        android:layout_width="72dp"
                        android:layout_height="72dp"
                        android:scaleType="fitXY"
                        android:layout_marginLeft="15dp"
                        android:layout_gravity="center_vertical"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginLeft="10dp">

                        <TextView
                            android:id="@+id/tv_product_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="15dp"
                            android:ellipsize="end"
                            android:maxLines="2"
                            android:text="计算机科学与技术"
                            android:visibility="gone"
                            android:textStyle="bold"
                            android:textColor="@color/ui_txt_normal_color"
                            android:textSize="@dimen/h3_font_size" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_school"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="华中科技大学"
                                android:drawableLeft="@mipmap/order_icon_product_school"
                                android:drawablePadding="5dp"
                                android:textColor="@color/ui_txt_normal_color"
                                android:textSize="12sp"
                                android:layout_marginTop="6dp"
                                />
                            <TextView
                                android:id="@+id/tv_profession"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="计算机与技术"
                                android:drawableLeft="@mipmap/order_icon_product_profession"
                                android:drawablePadding="5dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/ui_txt_normal_color"
                                android:textSize="12sp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:layout_marginTop="6dp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:id="@+id/tv_duration"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2.5年"
                                android:drawableLeft="@mipmap/order_icon_product_time"
                                android:drawablePadding="5dp"
                                android:textColor="@color/ui_txt_normal_color"
                                android:textSize="12sp"
                                android:layout_marginTop="6dp"
                                />
                            <TextView
                                android:id="@+id/tv_address"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="武汉"
                                android:drawableLeft="@mipmap/order_icon_product_address"
                                android:drawablePadding="5dp"
                                android:layout_marginLeft="10dp"
                                android:textColor="@color/ui_txt_normal_color"
                                android:textSize="12sp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:layout_marginTop="6dp"
                                />
                            <TextView
                                android:id="@+id/tv_brand"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="国开"
                                android:textColor="#FF43C590"
                                android:background="@drawable/shap_green_radius_2"
                                android:padding="2dp"
                                android:textSize="10sp"
                                android:layout_marginTop="6dp"
                                android:layout_marginLeft="5dp"
                                />
                            <TextView
                                android:id="@+id/tv_product"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="专升本"
                                android:textColor="#FFFF9500"
                                android:background="@drawable/shap_yellow_radius_2"
                                android:padding="2dp"
                                android:layout_marginLeft="7dp"
                                android:textSize="10sp"
                                android:layout_marginTop="6dp"
                                />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="¥"
                                android:textColor="@color/ui_primary_color"
                                android:textSize="12sp"
                                android:layout_marginTop="3dp"
                                />
                            <TextView
                                android:id="@+id/tv_sale_price"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2900.90"
                                android:drawablePadding="5dp"
                                android:layout_marginLeft="5dp"
                                android:textColor="@color/ui_primary_color"
                                android:textSize="18sp"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:textStyle="bold"
                                android:layout_marginTop="4dp"
                                />

                            <TextView
                                android:id="@+id/tv_stock"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="3dp"
                                android:text="x 2"
                                android:textColor="@color/ui_txt_hint_color"
                                android:textSize="12sp" />
                        </LinearLayout>
                        <TextView
                            android:id="@+id/tv_agent"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/ui_txt_hint_color"
                            android:layout_toRightOf="@id/agent_left"
                            android:text="普育吧科技有限公司为您服务"
                            android:drawableLeft="@mipmap/icon_organization"
                            android:drawablePadding="4dp"
                            android:textSize="@dimen/h5_font_size"
                            android:maxLines="1"
                            />

                    </LinearLayout>

                </LinearLayout>






                <RelativeLayout
                    android:id="@+id/rlt_attrubute"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_below="@+id/llt_order_content"
                    android:layout_marginTop="5dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="属性"
                        android:textColor="@color/ui_txt_normal_color"
                        android:textSize="@dimen/h3_font_size"
                        />

                    <TextView
                        android:id="@+id/tv_category_value"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="普通班，红色"
                        android:textColor="@color/ui_txt_normal_color"
                        android:textSize="@dimen/h4_font_size"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="20dp"
                    android:layout_below="@+id/rlt_attrubute">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="发货"
                        android:textColor="@color/ui_txt_normal_color"
                        android:textSize="@dimen/h3_font_size"
                        />

                    <TextView
                        android:id="@+id/tv_logister"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="线上发货"
                        android:textColor="@color/ui_txt_normal_color"
                        android:textSize="@dimen/h4_font_size"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        />
                </RelativeLayout>

            </RelativeLayout>



            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="金额"
                    android:textColor="@color/ui_txt_normal_color"
                    android:textSize="@dimen/h2_font_size"
                    android:textStyle="bold"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="8dp"
                    />

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="商品金额"
                        android:textColor="@color/ui_txt_normal_color"
                        android:textSize="@dimen/h3_font_size"
                        />

                    <TextView
                        android:id="@+id/tv_real_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥1195.00"
                        android:textColor="@color/ui_txt_normal_color"
                        android:textSize="@dimen/h4_font_size"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="优惠"
                        android:textColor="@color/ui_txt_normal_color"
                        android:textSize="@dimen/h3_font_size"
                        />

                    <TextView
                        android:id="@+id/tv_min_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥0.00"
                        android:textColor="@color/ui_primary_color"
                        android:textSize="@dimen/h4_font_size"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        />
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginBottom="15dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="实付"
                        android:textColor="@color/ui_txt_normal_color"
                        android:textSize="@dimen/h3_font_size"
                        />

                    <TextView
                        android:id="@+id/tv_money"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="¥866.00"
                        android:textColor="@color/red"
                        android:textSize="@dimen/h4_font_size"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="15dp"
                        />
                </RelativeLayout>



            </LinearLayout>
        </LinearLayout>
    </ScrollView>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white">

        <TextView
            android:id="@+id/tv_total_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" ¥866.00"
            android:textColor="@color/ui_txt_normal_color"
            android:textSize="@dimen/h3_font_size"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true"
            android:textColorHint="@color/ui_txt_normal_color"
            />


        <TextView
            android:id="@+id/tv_buy"
            android:layout_width="110dp"
            android:layout_height="28dp"
            android:text="立即支付"
            android:textSize="@dimen/h5_font_size"
            android:gravity="center"
            android:textColor="@color/ui_primary_color"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:drawablePadding="4dp"
            android:background="@drawable/ui_shap_verification_code_select"
            />
    </RelativeLayout>
</RelativeLayout>