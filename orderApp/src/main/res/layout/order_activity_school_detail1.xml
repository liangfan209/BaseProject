<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_public_title"/>

    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="14dp"
        android:layout_marginRight="14dp">

        <com.google.android.material.appbar.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fitsSystemWindows="false"
            app:elevation="0dp"
            app:layout_behavior="com.clkj.order.mvp.ui.AppBarLayoutBehavior">

            <com.google.android.material.appbar.CollapsingToolbarLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_scrollFlags="scroll|exitUntilCollapsed">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@drawable/school_pression_bg"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.fan.baseuilibrary.view.CircleImageView
                            android:id="@+id/iv_icon"
                            android:layout_width="65dp"
                            android:layout_height="65dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginTop="14dp"
                            android:layout_marginBottom="14dp"
                            />
                        <TextView
                            android:id="@+id/tv_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="@dimen/h3_font_size"
                            android:textColor="@color/white"
                            android:maxLines="1"
                            android:ellipsize="end"
                            android:text="华中农业大学"
                            android:textStyle="bold"
                            android:layout_marginTop="35dp"
                            android:layout_marginLeft="100dp"
                            />
                    </RelativeLayout>
                        <TextView
                            android:id="@+id/tv_detail"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:textColor="@color/white"
                            android:textSize="@dimen/h5_font_size"
                            android:lines="3"
                            android:lineSpacingExtra="1.6dp"
                            android:letterSpacing="0"
                            android:lineSpacingMultiplier="1.0"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:layout_marginBottom="10dp"
                            android:text=""
                            />

                    <RelativeLayout
                        android:id="@+id/rlt_expance"
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:background="@drawable/shap_touming_4"
                        android:layout_alignParentBottom="true"
                        >
                        <TextView
                            android:id="@+id/tv_expance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerInParent="true"
                            android:text="展开详情"
                            android:textSize="@dimen/h5_font_size"
                            android:textColor="@color/white"
                            android:drawableLeft="@mipmap/icon_expansion_down"
                            android:drawablePadding="4dp"
                            />
                    </RelativeLayout>
                </LinearLayout>
            </com.google.android.material.appbar.CollapsingToolbarLayout>
            <com.fan.baseuilibrary.view.flycotablayout.widget.SkinSlidingTabLayout
                android:id="@+id/tablayout"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                app:tl_indicator_color="@color/ui_primary_color"
                app:tl_indicator_height="3dp"
                app:tl_textUnselectColor="@color/ui_txt_normal_color"
                app:tl_textSelectColor="@color/ui_primary_color"
                app:tl_textsize="@dimen/h2_font_size"
                app:tl_iconVisible="false"
                app:tl_indicator_width="60dp"
                app:tl_tab_padding="10dp"
                app:tl_tab_space_equal="true"
                android:background="@color/white"
                android:layout_gravity="bottom"
                />
        </com.google.android.material.appbar.AppBarLayout>

        <com.fan.baseuilibrary.view.NoAnimationViewPager
            android:id="@+id/viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            app:layout_behavior="@string/appbar_scrolling_view_behavior" />
    </androidx.coordinatorlayout.widget.CoordinatorLayout>

</LinearLayout>