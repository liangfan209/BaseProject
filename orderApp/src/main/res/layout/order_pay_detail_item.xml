<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:orientation="vertical"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="15dp"
    android:layout_marginBottom="15dp"
    >

    <TextView
        android:id="@+id/tv_pay_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h3_font_size"
        android:textColor="@color/ui_txt_normal_color"
        android:text="扫码支付"
        android:textStyle="bold"
        />

    <TextView
        android:id="@+id/tv_pay_status"
        android:layout_width="52dp"
        android:layout_height="17dp"
        android:textSize="9sp"
        android:textColor="@color/ui_primary_color"
        android:text="支付成功"
        android:gravity="center"
        android:layout_marginRight="15dp"
        android:layout_toRightOf="@id/tv_pay_type"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="3dp"
        android:background="@drawable/ui_shap_verification_code_select"
        />

    <TextView
        android:id="@+id/tv_pay_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h3_font_size"
        android:textColor="@color/ui_txt_normal_color"
        android:text="-￥3600.00"
        android:textStyle="bold"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        />

    <TextView
        android:id="@+id/tv_pay_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h5_font_size"
        android:textColor="@color/ui_txt_hint_color"
        android:text="付款单号：476428428887"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        />

    <TextView
        android:id="@+id/tv_pay_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/h5_font_size"
        android:textColor="@color/ui_txt_hint_color"
        android:text="2020-10-27 21:09"
        android:textStyle="bold"
        android:layout_marginTop="35dp"
        android:layout_alignParentRight="true"
        android:layout_marginRight="15dp"
        />
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="#eeeeee"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>