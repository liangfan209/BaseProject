<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/fafafa">
    <include layout="@layout/layout_public_title"/>

    <com.fan.baseuilibrary.view.FlowRadioGroup
        android:id="@+id/fltGp"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_marginTop="30dp"
        android:background="@color/white"
        android:orientation="vertical">

        <skin.support.widget.SkinCompatRadioButton
            android:id="@+id/tv_0"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:background="@drawable/ui_shap_radio_bt_selecter"
            android:textColor="@color/ui_radio_bt_color_selector"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:button="@null"
            />
        <skin.support.widget.SkinCompatRadioButton
            android:id="@+id/tv_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:button="@null"
            android:background="@drawable/ui_shap_radio_bt_selecter"
            android:textColor="@color/ui_radio_bt_color_selector"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            />
        <skin.support.widget.SkinCompatRadioButton
            android:id="@+id/tv_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:button="@null"
            android:background="@drawable/ui_shap_radio_bt_selecter"
            android:textColor="@color/ui_radio_bt_color_selector"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            />
        <skin.support.widget.SkinCompatRadioButton
            android:id="@+id/tv_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:button="@null"
            android:background="@drawable/ui_shap_radio_bt_selecter"
            android:textColor="@color/ui_radio_bt_color_selector"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            />
        <skin.support.widget.SkinCompatRadioButton
            android:id="@+id/tv_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:button="@null"
            android:background="@drawable/ui_shap_radio_bt_selecter"
            android:textColor="@color/ui_radio_bt_color_selector"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            />
        <skin.support.widget.SkinCompatRadioButton
            android:id="@+id/tv_5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingTop="4dp"
            android:paddingBottom="4dp"
            android:button="@null"
            android:background="@drawable/ui_shap_radio_bt_selecter"
            android:textColor="@color/ui_radio_bt_color_selector"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            />
    </com.fan.baseuilibrary.view.FlowRadioGroup>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <FrameLayout
        android:id="@+id/flt_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</LinearLayout>