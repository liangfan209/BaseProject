<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@color/fafafa">
    <include layout="@layout/layout_public_title"/>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="2px"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:background="@drawable/shap_white_radius_4">

        <TextView
            android:id="@+id/tv_address_location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="湖北"
            android:textSize="@dimen/h5_font_size"
            android:layout_marginLeft="9dp"
            android:textColor="@color/ui_txt_normal_color"
            android:textStyle="bold"
            android:drawablePadding="7dp"
            />
        <ImageView
            android:id="@+id/iv_address_location"
            android:layout_width="12dp"
            android:layout_height="16dp"
            android:background="@mipmap/icon_address_location"
            android:layout_marginLeft="8dp"/>

        <ImageView
            android:layout_width="1px"
            android:layout_height="15dp"
            android:layout_marginLeft="10dp"
            android:background="@color/ui_txt_hint_color"
            />
        <TextView
            android:id="@+id/det_search"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:background="@null"
            android:layout_marginLeft="10dp"
            android:textSize="@dimen/h5_font_size"
            android:hint="请输入搜索名称"
            />
        <RelativeLayout
            android:id="@+id/rlt_search"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:background="@mipmap/icon_search"
                android:layout_centerInParent="true"/>
        </RelativeLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
       >
        <ImageView
            android:id="@+id/iv_advertising"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:background="@mipmap/icon_advertising"/>

        <RelativeLayout
            android:id="@+id/rlt_profession_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="5dp">

            <TextView
                android:id="@+id/tv_school_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学校"
                android:drawableRight="@mipmap/order_icon_xiala_unselect"
                android:drawablePadding="5dp"
                android:textSize="@dimen/h3_font_size"
                android:textColor="@color/ui_txt_normal_color"
                />

            <TextView
                android:id="@+id/tv_profession_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专业"
                android:drawableRight="@mipmap/order_icon_xiala_unselect"
                android:drawablePadding="5dp"
                android:textSize="@dimen/h3_font_size"
                android:textColor="@color/ui_txt_normal_color"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:id="@+id/tv_year_select"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学年"
                android:drawableRight="@mipmap/order_icon_xiala_unselect"
                android:drawablePadding="5dp"
                android:textSize="@dimen/h3_font_size"
                android:textColor="@color/ui_txt_normal_color"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <com.fan.baseuilibrary.view.FlowLayout
            android:id="@+id/flow_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="10dp">

            <com.fan.baseuilibrary.view.DeleteTextView
                android:id="@+id/tv_school"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="华中科技大学"
                android:textColor="@color/ui_primary_color"
                android:padding="6dp"
                android:drawablePadding="5dp"
                android:textSize="@dimen/h5_font_size"
                android:visibility="gone"
                android:drawableRight="@mipmap/order_icon_pression_del"
                android:background="@drawable/ui_shap_verification_code_select"/>

            <com.fan.baseuilibrary.view.DeleteTextView
                android:id="@+id/tv_profession"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计算机科学与技术"
                android:visibility="gone"
                android:textColor="@color/ui_primary_color"
                android:padding="6dp"
                android:drawablePadding="5dp"
                android:textSize="@dimen/h5_font_size"
                android:drawableRight="@mipmap/order_icon_pression_del"
                android:background="@drawable/ui_shap_verification_code_select"
                android:layout_marginLeft="14dp"/>

            <com.fan.baseuilibrary.view.DeleteTextView
                android:id="@+id/tv_year"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3个学年"
                android:textColor="@color/ui_primary_color"
                android:padding="6dp"
                android:textSize="@dimen/h5_font_size"
                android:drawablePadding="5dp"
                android:visibility="gone"
                android:drawableRight="@mipmap/order_icon_pression_del"
                android:background="@drawable/ui_shap_verification_code_select"
                android:layout_marginLeft="14dp"/>
        </com.fan.baseuilibrary.view.FlowLayout>

        <FrameLayout
            android:id="@+id/flt_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_product_list"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</LinearLayout>