<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <include layout="@layout/layout_public_title"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginTop="2dp">
        <include layout="@layout/order_product_search"/>


        <com.zhpan.bannerview.BannerViewPager
            android:id="@+id/banner_advertising"
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="65dp"
            app:bvp_indicator_visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学校"
                android:textSize="@dimen/h3_font_size"
                android:textColor="@color/ui_txt_normal_color"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="专业"
                android:textSize="@dimen/h3_font_size"
                android:textColor="@color/ui_txt_normal_color"
                android:layout_centerHorizontal="true"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="学年"
                android:textSize="@dimen/h3_font_size"
                android:textColor="@color/ui_txt_normal_color"
                android:layout_alignParentRight="true"
                />
        </RelativeLayout>

        <com.fan.baseuilibrary.view.FlowLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="华中科技大学 X"
                android:textColor="@color/ui_primary_color"
                android:padding="6dp"
                android:textSize="@dimen/h5_font_size"
                android:background="@drawable/ui_shap_verification_code_select"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="计算机科学与技术 X"
                android:textColor="@color/ui_primary_color"
                android:padding="6dp"
                android:textSize="@dimen/h5_font_size"
                android:background="@drawable/ui_shap_verification_code_select"
                android:layout_marginLeft="14dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="与技术 X"
                android:textColor="@color/ui_primary_color"
                android:padding="6dp"
                android:textSize="@dimen/h5_font_size"
                android:background="@drawable/ui_shap_verification_code_select"
                android:layout_marginLeft="14dp"/>
        </com.fan.baseuilibrary.view.FlowLayout>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_product_list"
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>

    </LinearLayout>
</LinearLayout>