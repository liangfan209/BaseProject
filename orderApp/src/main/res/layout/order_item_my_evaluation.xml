<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/shap_white_radius_10"
    android:paddingBottom="15dp">


    <com.fan.baseuilibrary.view.CircleImageView
        android:id="@+id/civ_img"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:background="@mipmap/icon_user_head"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="15dp"
        />

    <TextView
        android:id="@+id/tv_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="安安宝贝"
        android:textColor="#ff999999"
        android:textSize="14sp"
        android:layout_toRightOf="@id/civ_img"
        android:layout_marginTop="22dp"
        android:layout_marginLeft="15dp"
        />
    <TextView
        android:id="@+id/tv_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="煎炒烹砸都可以，好用的不得了啊非常喜欢，下次会回购哦。"
        android:textColor="#ff999999"
        android:textSize="14sp"
        android:maxLines="5"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/tv_name"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="30dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rcv_img_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tv_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="12dp"/>
    
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rcv_img_list"
        android:paddingBottom="5dp"
        android:layout_marginTop="10dp"
        android:background="@color/fafafa"
        >

        <ImageView
            android:id="@+id/iv_product"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/iv_product"
            android:orientation="vertical"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"

            >

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="华中科技大学成教专升本 2021 年报考入口…"
                android:textColor="#ff333333"
                android:textSize="14sp"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="2dp">
                <TextView
                    android:id="@+id/tv_school"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="华中科技大学"
                    android:drawableLeft="@mipmap/order_icon_product_school"
                    android:drawablePadding="5dp"
                    android:textColor="@color/ui_txt_normal_color"
                    android:textSize="12sp"
                    android:layout_marginTop="6dp"
                    />
                <TextView
                    android:id="@+id/tv_profession"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="计算机与技术"
                    android:drawableLeft="@mipmap/order_icon_product_profession"
                    android:drawablePadding="5dp"
                    android:layout_marginLeft="10dp"
                    android:textColor="@color/ui_txt_normal_color"
                    android:textSize="12sp"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:layout_marginTop="6dp"
                    />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>
</RelativeLayout>
