<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <include layout="@layout/layout_public_title" />
    <LinearLayout
        android:id="@+id/llt_top_content"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/white">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="合同人"
                android:textColor="@color/ui_txt_normal_color"
                android:textSize="@dimen/h3_font_size"
                android:layout_centerVertical="true"
                />

            <com.fan.baseuilibrary.view.DeletableEditText
                android:id="@+id/et_name"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:maxLength="10"
                android:hint="请输入合同人姓名"
                style="@style/ui_edit_txt_style"
                android:textSize="@dimen/h4_font_size"
                android:layout_marginLeft="97dp"/>
        </RelativeLayout>

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f2f2f2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="手机号"
                android:textColor="@color/ui_txt_normal_color"
                android:textSize="@dimen/h3_font_size"
                android:layout_centerVertical="true"
                />
            <com.fan.baseuilibrary.view.DeletableEditText
                android:id="@+id/et_phone"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:maxLength="13"
                android:hint="请输入手机号"
                style="@style/ui_edit_txt_style"
                android:textSize="@dimen/h4_font_size"
                android:inputType="phone"
                android:layout_marginLeft="97dp"/>
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f2f2f2"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证"
                android:textColor="@color/ui_txt_normal_color"
                android:textSize="@dimen/h3_font_size"
                android:layout_centerVertical="true"
                />
            <com.fan.baseuilibrary.view.DeletableEditText
                android:id="@+id/et_id_card"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:maxLength="21"
                android:hint="请输入完整的身份证号"
                style="@style/ui_edit_txt_style"
                android:textSize="@dimen/h4_font_size"
                android:layout_marginLeft="97dp"/>
            <ImageView
                android:id="@+id/iv_scan1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@mipmap/saoyisao"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="15dp"
                android:visibility="gone"
                />
        </RelativeLayout>
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="#f2f2f2"/>
        <RelativeLayout
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="邮箱"
                android:textColor="@color/ui_txt_normal_color"
                android:textSize="@dimen/h3_font_size"
                android:layout_centerVertical="true"
                />
            <com.fan.baseuilibrary.view.DeletableEditText
                android:id="@+id/et_email"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@null"
                android:maxLength="30"
                android:inputType="textEmailAddress"
                android:hint="请输入正确的邮箱用于接收合同"
                style="@style/ui_edit_txt_style"
                android:textSize="@dimen/h4_font_size"
                android:layout_marginLeft="97dp" />
        </RelativeLayout>


    </LinearLayout>
    <TextView
        android:id="@+id/tv_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:text="确认添加"
        style="@style/ui_h3_button_primary_style"
        android:gravity="center"
        android:layout_marginTop="50dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"/>
</LinearLayout>