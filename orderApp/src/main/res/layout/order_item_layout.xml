<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_item"
            android:layout_width="115dp"
            android:layout_height="65dp"
            android:scaleType="fitXY"
            android:background="@mipmap/order_icon_item_img"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="10dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginRight="15dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:text="国开专升本"
                android:maxWidth="150dp"
                android:textColor="@color/ui_txt_normal_color"
                android:textSize="@dimen/h3_font_size" />

            <TextView
                android:id="@+id/tv_remark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="视屏精讲班"
                android:textColor="#ff999999"
                android:textSize="12sp"
                android:layout_marginTop="7dp"
                android:maxLines="1"
                android:ellipsize="end"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="5dp">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="国开"
                    android:textColor="#FF43C590"
                    android:background="@drawable/shap_green_radius_2"
                    android:padding="2dp"
                    android:textSize="10sp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="专升本"
                    android:textColor="#FFFF9500"
                    android:background="@drawable/shap_yellow_radius_2"
                    android:padding="2dp"
                    android:layout_marginLeft="7dp"
                    android:textSize="10sp"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:background="@color/ui_recycleview_item_line_color"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"/>
</LinearLayout>