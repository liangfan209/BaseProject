<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/layout_public_title"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:scrollbars="none">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="12dp">

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:text="真实姓名"
                    android:textStyle="bold"
                    android:textColor="@color/ui_title_txt_color"
                    android:textSize="@dimen/h3_font_size"
                    android:gravity="center_vertical"
                    />
                <com.fan.baseuilibrary.view.DeletableEditText
                    android:id="@+id/det_name"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/ui_edit_txt_style"
                    android:hint="请输入真实姓名"
                    android:maxLength="10"
                    android:textSize="@dimen/h4_font_size"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="1px"
                android:layout_marginLeft="12dp"
                android:background="@color/ui_recycleview_item_line_color"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:orientation="horizontal"
                android:layout_marginLeft="12dp">

                <TextView
                    android:layout_width="82dp"
                    android:layout_height="match_parent"
                    android:text="身份证号"
                    android:textStyle="bold"
                    android:textColor="@color/ui_title_txt_color"
                    android:textSize="@dimen/h3_font_size"
                    android:gravity="center_vertical"
                    />
                <com.fan.baseuilibrary.view.DeletableEditText
                    android:id="@+id/det_id"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    style="@style/ui_edit_txt_style"
                    android:hint="请输入完整的身份证号"
                    android:textSize="@dimen/h4_font_size"
                    />
            </LinearLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="10dp"
                android:background="#f5f5f5"/>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:visibility="visible">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="上传身份证"
                    android:textStyle="bold"
                    android:textColor="@color/ui_txt_normal_color"
                    android:textSize="@dimen/h3_font_size"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="16dp"
                    />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="身份证正面"
                    android:textStyle="bold"
                    android:textColor="@color/ui_txt_normal_color"
                    android:textSize="@dimen/h3_font_size"
                    android:layout_marginTop="51dp"
                    android:layout_centerHorizontal="true"
                    />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/shadow_card"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="70dp">
                <ImageView
                    android:id="@+id/iv_front"
                    android:layout_width="247dp"
                    android:layout_height="137dp"
                    android:scaleType="fitXY"
                    android:background="@mipmap/user_center_icon_id_front"
                    />
            </RelativeLayout>


                <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="身份证反面" android:textStyle="bold"
                android:textColor="@color/ui_txt_normal_color"
                android:textSize="@dimen/h3_font_size"
                android:layout_marginTop="239dp"
                android:layout_centerHorizontal="true"
                />

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@mipmap/shadow_card"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="255dp">

                <ImageView
                    android:id="@+id/iv_back"
                    android:layout_width="247dp"
                    android:layout_height="137dp"
                    android:scaleType="fitXY"
                    android:background="@mipmap/user_center_icon_id_back"
                    />
            </RelativeLayout>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:text="手持身份证"
                    android:textColor="@color/ui_txt_normal_color"
                    android:textSize="@dimen/h3_font_size"
                    android:layout_marginTop="426dp"
                    android:layout_centerHorizontal="true"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@mipmap/shadow_card"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="440dp">
                    <ImageView
                        android:id="@+id/iv_hand_id_card"
                        android:layout_width="247dp"
                        android:layout_height="137dp"
                        android:scaleType="fitXY"
                        android:background="@mipmap/user_center_icon_id_hand"
                        />
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/tv_check"
                android:layout_width="match_parent"
                android:layout_height="43dp"
                android:layout_marginTop="20dp"
                style="@style/ui_h3_button_primary_style"
                android:gravity="center"
                android:text="提交审核"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginBottom="50dp"/>

        </LinearLayout>

    </ScrollView>


</LinearLayout>