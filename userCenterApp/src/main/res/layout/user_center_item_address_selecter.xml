<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="102dp"
    android:orientation="horizontal"
    >

    <skin.support.widget.SkinCompatCheckBox
        android:id="@+id/skcb"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="32dp"
        style="@style/ui_checkbox_style"
        android:checked="true"
        android:visibility="gone"
        android:layout_gravity="center_vertical"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="102dp"
        android:layout_marginLeft="20dp">



        <TextView
            android:id="@+id/tv_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="安先生"
            style="@style/ui_h3_normal_style"
            android:layout_marginTop="19dp"
            />
        <TextView
            android:id="@+id/tv_phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="139****2212"
            style="@style/ui_h5_normal_style"
            android:layout_toRightOf="@+id/tv_name"
            android:layout_marginLeft="21dp"
            android:layout_marginTop="19dp"
            />

        <FrameLayout
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="51dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="默认"
                android:padding="1dp"
                android:textColor="@color/ui_primary_color"
                android:textSize="10sp"
                android:background="@drawable/ui_shap_small_button_bg"
                />
            <TextView
                android:id="@+id/tv_txt"
                android:layout_width="175dp"
                android:layout_height="wrap_content"
                android:text="         湖北省武汉市江夏区佛祖岭街道58号达尚城1栋2单元402号"
                style="@style/ui_h5_normal_style"
                android:lineSpacingExtra="2dp"
                />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="编辑"
            android:textColor="@color/ui_txt_hint_color"
            android:textSize="@dimen/h5_font_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="18dp"
            android:maxLines="4"
            />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:background="@color/ui_recycleview_item_line_color"
            android:layout_marginRight="20dp"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


</LinearLayout>